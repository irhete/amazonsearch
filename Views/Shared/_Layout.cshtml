<body>

<section id="main">


<h2>Enter Keyword(s)</h2>

@using (Html.BeginForm("SearchResult", "Home", FormMethod.Get)) 
{  
<input type="text" name="keywords" value="" /><br />
<input type="hidden" name="page" value="1"/>
<input type="submit" value="Search" class="submit" id="searchButton" />
}
<br />
<form action="" >
<select id="currencies">
@{var currencies = ViewData["currencies"] as Dictionary<string, string>;}
@foreach (KeyValuePair<string, string> pair in currencies)
{
    if (pair.Key == "USD")
    {
        <option value=@pair.Key  selected>@pair.Value</option>
    }
    else
    {
<option value=@pair.Key  >@pair.Value</option>
    }
}
</select>
</form>

@RenderBody()
</section>
</body>
</html>