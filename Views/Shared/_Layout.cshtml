<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")"></script>
    <script src="@Url.Content("~/Scripts/currency-changer.js")"></script>
</head>
<body>
    <section id="main">


<h2>Enter Keyword(s)</h2>

@using (Html.BeginForm("SearchResult", "Home", FormMethod.Get))
{
    
<input type="text" name="keywords" value="@Request.Params["keywords"]" /><br />
<input type="hidden" name="page" value="1"/>
<input type="submit" value="Search" class="submit" id="searchButton" />
}

@RenderBody()
</section>
</body>
</html>
